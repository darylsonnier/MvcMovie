            $('purchaseForm').validate().form();

            if ($('purchaseForm').valid() === false) {
                console.log("invalid");
            } else {
                console.log("valid!");
            }

        });*/

        $(document).ready(function () {
            var checkformValidation = function () {
                $("#purchaseForm").validate({
                    rules: {
                        "Model.billName": "required",
                        "Model.billAdd1": "required",
                        "Model.billState": "required",
                        "Model.billZip": "required",
                        "Model.year": "required",
                        "Model.month": "required",
                        "Model.cvv": "required",
                        "Model.card": "required",
                    }
                });
            }

            $('#submitApp').click(function (e) {
                e.preventDefault();
                checkformValidation();
                if ($("#purchaseForm").valid()) {
                    alert("success");
                    return;
                } else {
                    alert("wrong");
                }
            });
        });
    </script>
}
