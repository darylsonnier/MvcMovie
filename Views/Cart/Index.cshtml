@using System.Linq;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shopping Cart</h1>

<table cellpadding="2" cellspacing="2" border="1" class="table">
    <tr>
        <th>Option</th>
        <th>Title</th>
        <th>Thumbnail</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
        <th></th>
    </tr>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Movie.Title">Remove</a></td>
            <td>@item.Movie.Title</td>
            <td><img src=@item.Movie.ImageURL width="60" /> </td>
            <td>@item.Movie.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Movie.Price * item.Quantity)</td>
            <td>
                <table cellpadding="2" cellspacing="2">
                    <tr>
                        <td>
                            <a asp-controller="cart" asp-action="increment" asp-route-id="@item.Movie.Title">Add</a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a asp-controller="cart" asp-action="decrement" asp-route-id="@item.Movie.Title">Subtract</a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    }
    <tr>
        <td align="right" colspan="6">Subtotal</td>
        <td>
            @ViewBag.subtotal
        </td>
    </tr>
    <tr>
        <td align="right" colspan="6">Taxes</td>
        <td>
            @ViewBag.tax
        </td>
    </tr>
    <tr>
        <td align="right" colspan="6">Total</td>
        <td>
            @ViewBag.total
        </td>
    </tr>

</table>
<br>
<a asp-controller="movies" asp-action="MoviesByGenre" asp-route-id="@ViewBag.last">Continue Shopping</a>